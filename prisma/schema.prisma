generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  BABY
  ADULT
  SENIOR
}

enum BodyBuild {
  SMALL
  MEDIUM
  LARGE
}

enum Independence {
  LOW
  MEDIUM
  HIGH
}

enum Environment {
  SMALL
  WIDE
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  zipcode       String
  address       String
  whatsapp      String
  password_hash String
  created_at    DateTime @default(now())
  Pet           Pet[]

  @@map("organizations")
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  description  String
  age          Age          @default(ADULT)
  build        BodyBuild    @default(MEDIUM)
  independence Independence @default(MEDIUM)
  environment  Environment  @default(SMALL)

  created_at DateTime @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
